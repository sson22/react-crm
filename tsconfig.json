{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "jsx": "react-jsx",
    "paths": {
      "*": ["node_modules/*"]
    },
    "typeRoots": ["./src/config", "./node_modules/@types", "./client/node_modules/@types"]
  },
  "include": ["src/**/*"]
}
